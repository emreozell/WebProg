@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserDetails> SignInManager
@inject UserManager<UserDetails> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" style="color: #f9f9f9 !important; " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" style="color: #f9f9f9 !important;" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
        <li class="nav-item">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" style="color: #f9f9f9 !important; " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dil
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" style="color: #eb0f0f !important;"asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="tr-TR" >Türkçe</a>
                    <a class="dropdown-item" style="color: #eb0f0f !important;" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US">English</a>

                </div>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" style="color: #f9f9f9 !important;" asp-area="Identity" asp-page="/Account/Register" style="color: #e6f500 !important; ">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" style="color: #f9f9f9 !important;" asp-area="Identity" asp-page="/Account/Login" style="color: #e6f500 !important; ">Login</a>
        </li>
        <li class="nav-item">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" style="color: #f9f9f9 !important; " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dil
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" style="color: #eb0f0f !important;" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="tr-TR">Türkçe</a>
                    <a class="dropdown-item" style="color: #eb0f0f !important;"  asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US">English</a>

                </div>
            </div>
        </li>
    }
</ul>
