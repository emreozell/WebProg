<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" asp-controller="Chart" asp-action="Statistics">Manavcım</a>
            </div>
            <ul class="nav navbar-nav">
               
                <li><a asp-controller="Category" asp-action="Index">Categories</a></li>
                <li><a asp-controller="Food" asp-action="Index">Products</a></li>
                <li><a asp-controller="Chart" asp-action="Index"> Chart</a></li>
                <li><a asp-controller="Chart" asp-action="Statistics">Statistics</a></li>

                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" style="height: 50px" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </li>
                <li class="nav-item">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" style="color: #f9f9f9 !important; " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dil
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" style="color: #eb0f0f !important;" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="tr-TR">Türkçe</a>
                            <a class="dropdown-item" style="color: #eb0f0f !important;" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US">English</a>

                        </div>
                    </div>
                </li>


            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
  
</body>
</html>
